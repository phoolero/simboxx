{% extends 'baseHome.html.twig' %}

{% block title %}Cheque
{% endblock %}

{% block body %}
	<h1>Vista Cheque</h1>
	<section class="content mt-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Tabla de Cheque</h3>
						</div>
						<div class="card-body">
							<table class="table table-bordered table-hover">
								<tbody>
									<tr>
										<th>Id</th>
										<td>{{ cheque.id }}</td>
									</tr>
									<tr>
										<th>Serie</th>
										<td>{{ cheque.serie }}</td>
									</tr>
									<tr>
										<th>MontoNumero</th>
										<td>{{ cheque.MontoNumero }}</td>
									</tr>
									<tr>
										<th>MontoLetras</th>
										<td>{{ cheque.MontoLetras }}</td>
									</tr>
									<tr>
										<th>TarjadoOrden</th>
										<td>{{ cheque.TarjadoOrden }}</td>
									</tr>
									<tr>
										<th>TarjadoAlPortador</th>
										<td>{{ cheque.TarjadoAlPortador }}</td>
									</tr>
									<tr>
										<th>Beneficiario</th>
										<td>{{ cheque.beneficiario }}</td>
									</tr>
									<tr>
										<th>FirmaTitular</th>
										<td>{{ cheque.FirmaTitular }}</td>
									</tr>
									<tr>
										<th>FirmaBeneficiarioAtravesada</th>
										<td>{{ cheque.FirmaBeneficiarioAtravesada }}</td>
									</tr>
									<tr>
										<th>Cruzado</th>
										<td>{{ cheque.cruzado }}</td>
									</tr>
									<tr>
										<th>CruzadoEspecialBanco</th>
										<td>{{ cheque.CruzadoEspecialBanco }}</td>
									</tr>
									<tr>
										<th>NumeroDiasCheque</th>
										<td>{{ cheque.NumeroDiasCheque }}</td>
									</tr>
									<tr>
										<th>NumeroDiasRevalidacion</th>
										<td>{{ cheque.NumeroDiasRevalidacion }}</td>
									</tr>
									<tr>
										<th>RevalidacionFirma</th>
										<td>{{ cheque.RevalidacionFirma }}</td>
									</tr>
									<tr>
										<th>EndosoDepositoCuenta</th>
										<td>{{ cheque.EndosoDepositoCuenta }}</td>
									</tr>
									<tr>
										<th>EndosoDepositoFirma</th>
										<td>{{ cheque.EndosoDepositoFirma }}</td>
									</tr>
									<tr>
										<th>EndosoDepositoRut</th>
										<td>{{ cheque.EndosoDepositoRut }}</td>
									</tr>
									<tr>
										<th>EndosoRegularFirma</th>
										<td>{{ cheque.EndosoRegularFirma }}</td>
									</tr>
									<tr>
										<th>EndosoRegularRut</th>
										<td>{{ cheque.EndosoRegularRut }}</td>
									</tr>
									<tr>
										<th>EndosoRegularNombre</th>
										<td>{{ cheque.EndosoRegularNombre }}</td>
									</tr>
									<tr>
										<th>Error</th>
										<td>{{ cheque.Error }}</td>
									</tr>
								</tbody>
							</table>

							<a href="{{ path('cheques') }}" class="btn btn-primary ml-2">
								<i class="fas fa-angle-left"></i>
							</a>

							<a href="{{ path('cheque_editar', {'id': cheque.id}) }}" class="btn btn-warning">
								<i class="fas fa-edit text-white"></i>
							</a>

							{{ include('cheque/_delete_form.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

