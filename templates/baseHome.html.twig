<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="{{ asset('../public/build/css/app.css') }}">
		<link rel="stylesheet" href="{{ asset('../public/css/style.css') }}">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous"/>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
		{% block head_js %}{% endblock %}
		<link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}"/>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset("img/logos/simbox-blanco.png")}}" width="40"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
					<ul class="navbar-nav">
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('home') }}">Home
								<span class="sr-only">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Ejercicios</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('usuario', {'email':app.user.email})}}">{{ app.user.nombre }}</a>
							</li>
							{% if app.user.roles[0]== "ROLE_SUPER_ADMIN" %}
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Administración
									</a>
									<ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
										<li>
											<a class="dropdown-item" href="{{ path('cheques')}}">Cheques</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('cedulas')}}">Cédulas</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('bancos')}}">Bancos</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('empresas')}}">Empresas</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('administradores')}}">Administradores</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('alumnos')}}">Alumnos</a>
										</li>
									</ul>
								</li>
								{% elseif app.user.roles[0]== "ROLE_EMPRESA" %}
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Administración
									</a>
									<ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
										<li>
											<a class="dropdown-item" href="{{ path('empresa_alumnos')}}">Alumnos</a>
										</li>
									</ul>
								</li>
							{% endif %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('logout') }}">Salir</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
        
		{% block body %}{% endblock %}

    
    <footer class="container mt-4">
        <p>&copy; Simbox 2020</p>
    </footer>
    
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
		<script src="{{ asset('../public/build/js/app.js') }}"></script>
		<script src="{{ asset('../public/js/jquery3.5.1.min.js') }}"></script>
		<script src="{{ asset('../public/js/bootstrap.js') }}"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>

