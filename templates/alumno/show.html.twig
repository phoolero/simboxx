{% extends 'baseHome.html.twig' %}

{% block title %}Alumno
{% endblock %}

{% block body %}
	<h1>Vista Alumno</h1>
	<section class="content mt-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Tabla de Alumno</h3>
						</div>
						<div class="card-body">
							<table class="table table-bordered table-hover">
								<tbody>
									<tr>
										<th>Nombre</th>
										<td>{{alumno.nombre}}</td>
									</tr>
									<tr>
										<th>Email</th>
										<td>{{alumno.email}}</td>
									</tr>
									<tr>
										<th>Password</th>
										<td>{{alumno.password}}</td>
									</tr>
									<tr>
										<th>Instituto</th>
										<td>{{alumno.institucion}}</td>
									</tr>
									<tr>
										<th>Tel√©fono</th>
										<td>{{alumno.telefono}}</td>
									</tr>
								</tbody>
							</table>

							<a href="{{ path('alumnos') }}" class="btn btn-primary ml-2">
								<i class="fas fa-angle-left"></i>
							</a>

							<a href="{{ path('alumno_editar', {'id': alumno.id}) }}" class="btn btn-warning">
								<i class="fas fa-edit text-white"></i>
							</a>

							{{ include('alumno/_delete_form.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

