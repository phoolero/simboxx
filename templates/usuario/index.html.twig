{% extends 'base.html.twig' %}

{% block title %}SIMBOX - Usuario{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
	  .jumbotron{
		background-image: url("{{ asset('img/fondos/fondo-jumbotron.jpg')}}");
		min-height:500px;
	  }
	  .notoria{
		font-size: 36px;
		color: white;
	  }
</style>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
		<a class="navbar-brand" href="#"><img src="{{ asset("img/logos/simbox-blanco.png")}}" width="40"></a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarsExampleDefault">
			<ul class="navbar-nav mr-auto">
			  <li class="nav-item active">
				<a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
			  </li>
			    <li class="nav-item">
				<a class="nav-link" href="#">Ejercicios</a>
			  </li>
			   {% if app.user %}
				<li class="nav-item">
					<a class="nav-link" href="{{ path('usuario', {'email':app.user.email})}}">{{ app.user.nombre }}</a>
				</li>
            	<li class="nav-item">
				<a class="nav-link" href="{{ path('logout') }}">Salir</a>
			  </li>
                {% endif %}
			</ul>
	    </div>
    </nav>

<main role="main">

  <div class="container pt-4">
	<div class="row" style="margin: 40px 0px 20px 0px">
      <div class="col-md-12">
		<h2><i class="fas fa-user-circle"></i>Datos del Usuario</h2>
		<label>Nombre</label>
		<p>{{app.user.nombre}}</p>
		<label>Email</label>
		<p>{{app.user.email}}</p>
		<a href="{{path('usuario_editar', {'email':app.user.email})}}">Editar</a>
{# 		{{form_start(form)}}
		{{form_widget(form)}}
		{{form_end(form)}} #}
	<pre>
		{{ dump(usuario) }}
	</pre>
	  </div>	  
	</div>

  </div> <!-- /container -->

</main>

<footer class="container">
  <p>&copy; Simbox 2020</p>
</footer>

{% endblock %}
