{% extends 'baseHome.html.twig' %}

{% block title %}SIMBOX - Usuario
{% endblock %}

{% block body %}
	<h1>Usuario index</h1>
	<section class="content mt-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h2>
								<i class="fas fa-user-circle"></i>
								Datos de
								{{app.user.nombre}}</h2>
						</div>
						<div class="card-body">

							<table class="table table-hover">
								<tbody>
									<tr>
										<th>Nombre</th>
										<td>{{app.user.nombre}}</td>
									</tr>
									<tr>
										<th>Email</th>
										<td>{{app.user.email}}</td>
									</tr>
									<tr>
										<th>Password</th>
										<td>{{app.user.password}}</td>
									</tr>
								</tbody>
							</table>
							<a href="{{path('usuario_editar', {'email':app.user.email})}}" class="btn btn-warning">
								<i class="fas fa-edit text-white"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}

