{% extends 'baseHome.html.twig' %}

{% block title %}Banco
{% endblock %}

{% block body %}
	<h1>Vista Banco</h1>
	<section class="content mt-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Tabla de Banco</h3>
						</div>
						<div class="card-body">
							<table class="table table-bordered table-hover">
								<tbody>
									<tr>
										<th>Nombre del Banco</th>
										<td>{{banco.nombre}}</td>
									</tr>
								</tbody>
							</table>

							<a href="{{ path('bancos') }}" class="btn btn-primary ml-2">
								<i class="fas fa-angle-left"></i>
							</a>

							<a href="{{ path('banco_editar', {'id': banco.id}) }}" class="btn btn-warning">
								<i class="fas fa-edit text-white"></i>
							</a>

							{{ include('banco/_delete_form.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

