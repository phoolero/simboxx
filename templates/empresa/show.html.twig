{% extends 'baseHome.html.twig' %}

{% block title %}Cheque
{% endblock %}

{% block body %}
	<h1>Vista Empresa</h1>
	<section class="content mt-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Tabla Empresa</h3>
						</div>
						<div class="card-body">
							<table class="table table-bordered table-hover">
								<tbody>
									<tr>
										<th>Nombre</th>
										<td>{{ empresa.nombre }}</td>
									</tr>
									<tr>
										<th>Rut</th>
										<td>{{ empresa.rut }}</td>
									</tr>
									<tr>
										<th>Fecha Inicio</th>
										<td>{{ empresa.getFechaInicio()|date('d/m/Y') }}</td>
									</tr>
									<tr>
										<th>Fecha Fin</th>
										<td>{{ empresa.getFechaFin()|date('d/m/Y') }}</td>
									</tr>
								</tbody>
							</table>

							<a href="{{ path('empresas') }}" class="btn btn-primary ml-2">
								<i class="fas fa-angle-left"></i>
							</a>

							<a href="{{ path('empresa_editar', {'id': empresa.id}) }}" class="btn btn-warning">
								<i class="fas fa-edit text-white"></i>
							</a>

							{{ include('empresa/_delete_form.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

